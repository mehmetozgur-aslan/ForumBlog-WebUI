@model BlogUpdateModel

<form asp-action="Update" method="post" class="p-3" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ShortDescription"></label>
        <input type="text" asp-for="ShortDescription" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input type="file" asp-for="Image" class="form-control-file" />
    </div>

    <div class="form-group">

        <button class="btn btn-info btn-block" type="submit">Ekle</button>

    </div>

</form>


@section Css{

    <link href="/Trumbowyg/dist/ui/trumbowyg.min.css" rel="stylesheet" />

}

@section JavaScript{

    <script src="/Trumbowyg/dist/trumbowyg.min.js"></script>
    <script>

        $("#Description").trumbowyg();

    </script>

}