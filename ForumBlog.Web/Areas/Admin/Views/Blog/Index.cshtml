@model List<BlogListModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-info btn-sm">Yeni Blog Ekle</a>
<table class="table table-bordered table-hover">
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.Title</td>
                <td>
                    <a asp-action="Update" asp-controller="Blog" asp-route-id="@blog.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-controller="Blog" asp-route-id="@blog.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>